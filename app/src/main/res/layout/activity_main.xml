<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top overlay: capabilities + lock status + Step 5 quality gating -->
    <LinearLayout
        android:id="@+id/top_overlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/manual_sensor_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Sensor: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/manual_focus_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Focus Distance: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/manual_white_balance_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AWB Lock: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/af_lock_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AF: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/ae_lock_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AE: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/awb_lock_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WB: —"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/quality_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ OK"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: N/A"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Switch
                android:id="@+id/block_capture_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block unless OK"
                android:textColor="@android:color/white" />

            <Switch
                android:id="@+id/torch_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Torch"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start_session_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Session" />

            <Button
                android:id="@+id/lock_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:enabled="false"
                android:text="Lock for Photogrammetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/capture_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Capture" />

            <Button
                android:id="@+id/end_session_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:enabled="false"
                android:text="End Session" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/export_session_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Export Session" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
